<section class="custom-product-grid section">
  <div>
    {% if section.settings.heading != blank %}
      <h2 class="custom-product-grid__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="custom-product-grid__grid">
      {% for block in section.blocks %}
        {% if block.type == 'product' and block.settings.product != blank %}
          {% assign product = block.settings.product %}

          <div class="custom-product-grid__item" {{ block.shopify_attributes }}>
            <div href="{{ product.url }}" class="product-card" data-product-handle="{{ product.handle }}">
              {% if product.featured_image %}
                <div class="product-card__image">
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.title | escape }}"
                    loading="lazy"
                    height="auto"
                    width="100%"
                  >
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<script src="{{ 'product-info.js' | asset_url }}" defer></script>
<script src="{{ 'product-form.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Tisso vison in the wild"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "limit": 6,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Grid",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .custom-product-grid {
    padding: 51px;
    margin-top: 39px;
  }

  @media (min-width: 2000px) {
    .custom-product-grid {
      padding: 191.23px 297.85px;
      margin-top: 48.77px;
    }
    .custom-product-grid h2 {
      display: none;
    }
  }

  .custom-product-grid__heading {
    font-family: Lustria;
    margin-bottom: 30px !important;
    font-weight: 400;
    font-size: 36px;
    line-height: 120%;
    letter-spacing: 0px;
    vertical-align: middle;
    margin: 0;
  }

  .custom-product-grid__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .product-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .product-card__image {
    background: #f6f6f6;
    overflow: hidden;
  }

  .product-card__image img {
    width: 100%;
    height: 444px;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .product-card:hover img {
    transform: scale(1.05);
  }

  .product-card__content {
    padding: 16px 0;
    text-align: center;
  }

  .product-card__title {
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 8px;
  }

  .product-card__price {
    font-size: 14px;
    font-weight: 600;
  }

  @media (max-width: 900px) {
    .custom-product-grid__grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .product-card__image img {
      width: 100%;
      height: 187px;
    }
    .custom-product-grid__grid {
      gap: 4px;
    }
    .custom-product-grid {
      padding: 24px 17px;
    }
    .custom-product-grid__heading {
      margin-bottom: 16px !important;
    }
  }
  .quick-view-modal {
    position: fixed;
    inset: 0;
    z-index: 9999;
  }

  .quick-view-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .quick-view-content {
    position: relative;
    background: #fff;
    max-width: 311px;
    margin: 5vh auto;
    padding: 17px 25px;
  }

  .quick-view-close {
    display: flex;
    justify-content: end;
    background: none;
    border: none;
    cursor: pointer;
  }
{% endstylesheet %}
