      position: relative;
      left: 0;
      top: 100%;
    }
    .middle-section-bottom .right-side img {
      object-fit: none;
      object-position: center top;
      height: 264px;
    }
  }

  .custom-banner__button-wrapper {
    display: inline-block;
  }

  .custom-banner__button-wrapper a {
    text-decoration: none;
    display: flex;
    align-items: center;
    border: none;
    padding: 1.2rem 3rem;
    font-size: 1.6rem;
    font-weight: 600;
    width: 244px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    overflow: hidden;
    justify-content: center;
    z-index: 0;
  }

  .custom-banner__button-wrapper a:hover::before {
    transform: scaleX(1);
  }

  /* keep text above overlay */
  .custom-banner__button-wrapper a > * {
    position: relative;
    z-index: 1;
  }

  /* icon fade out */
  .custom-banner__button-wrapper a:hover .icon {
    animation: iconFadeCycle 0.35s ease forwards;
  }

  @keyframes iconFadeCycle {
    0% {
      opacity: 1;
    }
    40% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .custom-banner__button-wrapper a .icon {
    margin-left: 0.8rem;
  }

  .custom-banner__button-wrapper a::before {
    content: '';
    position: absolute;
    inset: 0;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.35s ease;
    z-index: -1;
  }

  .custom-button-primary {
    background-color: #ffe600;
    color: #000;
  }

  .custom-button-secondary {
    background-color: black;
    color: white;
  }

  .custom-button-primary::before {
    background-color: black;
  }

  .custom-button-secondary::before {
    background-color: #ffe600;
  }

  .custom-button-primary:hover {
    color: white;
  }

  .custom-button-secondary:hover {
    color: black;
  }
  /* MOBILE TOP BAR */
  .top-bar-toggle {
    display: none;
    font-size: 24px;
    background: none;
    border: none;
    cursor: pointer;
    position: absolute;
    left: 15px;
  }

  .menu-icon,
  .cross-icon {
    display: inline-block;
  }
  .hidden {
    display: none !important;
  }

  .top-bar-content {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .top_bar_wrapper {
      flex-direction: column;
      align-items: flex-start;
      position: relative;
    }
    .top_bar_section.active {
      box-shadow: 0px 2px 4px 0px #00000026;
      background: #f7f7f7;
      z-index: 1;
    }
    .top_bar_section {
      display: flex;
      align-items: center;
    }
    .top_bar_section {
      position: relative;
      padding: 10px 50px;
      background-color: #f5f5f5;
    }
    .heading-desktop {
      display: none;
    }
    .mobile-heading {
      display: block;
    }

    .top-bar-toggle {
      display: block;
    }

    .top-bar-content {
      width: 100%;
      flex-direction: column;
      align-items: flex-start;
      max-height: 0;
      overflow: hidden;
      padding: 0;
      transition: max-height 0.3s ease, padding 0.3s ease;
    }

    .top-bar-content.active {
      max-height: 300px;
      padding: 25px 0px;
    }

    .custom-banner__button-wrapper {
      display: flex;
      justify-content: center;
    }
    .top-bar-content p,
    .top-bar-content .custom-banner__button-wrapper {
      width: 100%;
    }
  }
{% endstylesheet %}
