<div class="custom-banner">
  {% for block in section.blocks %}
    {% if block.type == 'top_bar' %}
      <div>
        <div class="top_bar_section">
          <button class="top-bar-toggle" aria-label="Toggle menu">
            <span class="menu-icon">
              <img
                src="{{ 'option-icon.svg' | asset_url }}"
                alt=""
                width="18"
                height="18"
                loading="eager"
            ></span>
            <span class="cross-icon hidden"
              ><img
                src="{{ 'cross-icon.svg' | asset_url }}"
                alt=""
                width="18"
                height="18"
                loading="eager"
            ></span>
          </button>
          <h1 class="mobile-heading">{{ block.settings.name }}</h1>
        </div>
        <div class="top_bar_wrapper top-bar-content">
          <h1 class="heading-desktop">{{ block.settings.name }}</h1>
          <p>{{ block.settings.tag_line }}</p>

          <div class="custom-banner__button-wrapper">
            <a href="{{ block.settings.button_link }}" class="custom-button-{{ block.settings.button_style }}">
              {{ block.settings.button_text }}
              <span class="icon icon-arrow-right">
                {{- 'icon-arrow.svg' | inline_asset_content -}}
              </span>
            </a>
          </div>
        </div>
      </div>
    {% elsif block.type == 'middle_section' %}
      <div class="middle_section_wrapper">
        <div>
          <img
            class="banner-image-1"
            src="{{ 'banner-image-1.svg' | asset_url }}"
            alt=""
            width="100%"
            height="auto"
            loading="eager"
          >
        </div>
        <div class="middle-section-bottom">
          <div class="left-side">
            <h1>{{ block.settings.title }}</h1>
            <p>{{ block.settings.description }}</p>
            <div class="custom-banner__button-wrapper">
              <a href="{{ block.settings.button_link }}" class="custom-button-{{ block.settings.button_style }}">
                {{ block.settings.button_text }}
                <span class="icon icon-arrow-right">
                  {{- 'icon-arrow.svg' | inline_asset_content -}}
                </span>
              </a>
            </div>
          </div>
          <div class="right-side">
            <img
              class="gift-card__image"
              src="{{ 'banner-image-2.svg' | asset_url }}"
              alt=""
              width="100%"
              height="auto"
              loading="eager"
            >
          </div>
        </div>
      </div>
    {% elsif block.type == 'bottom_section' %}
      <div class="bottom-section-wrapper">
        <p>{{ block.settings.text }}</p>
      </div>
    {% endif %}
  {% endfor %}
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.querySelector('.top-bar-toggle');
    const wrapper = document.querySelector('.top_bar_wrapper');
    const section = document.querySelector('.top_bar_section');
    const menuIcon = toggle?.querySelector('.menu-icon');
    const crossIcon = toggle?.querySelector('.cross-icon');

    if (toggle && wrapper) {
      toggle.addEventListener('click', () => {
        wrapper.classList.toggle('active');
        section.classList.toggle('active');
        menuIcon.classList.toggle('hidden');
        crossIcon.classList.toggle('hidden');
      });
    }
  });
</script>

