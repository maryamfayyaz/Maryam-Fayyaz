    align-items: center;
    margin: 0 0 0 67px;
    position: relative;
    overflow: hidden;
  }

  .middle-section-bottom .left-side h1 {
    font-family: Jost;
    margin-bottom: 20px;
    font-weight: 500;
    font-size: 70px;
    line-height: 100%;
    letter-spacing: 0px;
    vertical-align: middle;
    margin: 0;
  }

  .middle-section-bottom .left-side p {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 30px;
    color: #333;
    white-space: pre;
    text-wrap: auto;
    margin: 0;
