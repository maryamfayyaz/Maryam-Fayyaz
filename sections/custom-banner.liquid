  }

  .top_bar_wrapper h1 {
    margin: 0;
  }
  .top_bar_wrapper p {
    font-family: Jost;
    margin: 0;
    font-weight: 400;
    font-size: 16px;
    line-height: 13.42px;
    letter-spacing: 0px;
    text-align: center;
    vertical-align: middle;
  }

  .middle_section_wrapper {
    background-color: #ffffff;
  }

  .middle-section-bottom {
